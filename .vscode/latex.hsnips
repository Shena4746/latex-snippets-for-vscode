# za -> \alpha
# zG -> Gamma
context math(context)
snippet `(?<![\\a-zA-Z])z([a-zA-Z])(?![a-zA-Z])` " [HS] Greek letter" A
`` trans = {
	"a": "\\alpha",
	"b": "\\beta",
	"g": "\\gamma",
	"G": "\\Gamma",
	"d": "\\delta",
	"D": "\\Delta",
	"e": "\\epsilon",
	"E": "\\varepsilon",
	"z": "\\zeta",
	"h": "\\eta",
	"t": "\\theta",
	"T": "\\Theta",
	"k": "\\kappa",
	"i": "\\iota",
	"l": "\\lambda",
	"L": "\\Lambda",
	"m": "\\mu",
	"n": "\\nu",
	"x": "\\xi",
	"X": "\\Xi",
	"p": "\\pi",
	"P": "\\Pi",
	"r": "\\rho",
	"s": "\\sigma",
	"S": "\\Sigma",
	"o": "\\omega",
	"O": "\\Omega",
	"c": "\\chi",
	"f": "\\phi",
	"F": "\\varphi",
	"y": "\\upsilon",
	"Y": "\\Upsilon",
	"v": "\\psi",
	"V": "\\Psi",
	"u": "\\tau"
}
rv = (trans[m[1]] || ("z" + m[1])) ``
endsnippet

